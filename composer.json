{
    "name": "zorachka/event-dispatcher",
    "description": "Event Dispatcher",
    "keywords": [
        "zorachka",
        "event dispatcher",
        "psr-14"
    ],
    "homepage": "https://github.com/zorachka/event-dispatcher",
    "license": "MIT",
    "authors": [
        {
            "name": "Siarhei Bautrukevich",
            "email": "hello@bautrukevich.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "psr/event-dispatcher": "^1.0",
        "webmozart/assert": "^1.11",
        "zorachka/container": "^3.0"
    },
    "require-dev": {
        "dg/bypass-finals": "^1.3",
        "phpstan/phpstan-webmozart-assert": "^1.2",
        "roave/security-advisories": "dev-latest",
        "friendsofphp/php-cs-fixer": "^3.16",
        "phpstan/extension-installer": "^1.2",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpunit/phpunit": "^9.6"
    },
    "autoload": {
        "psr-4": {
            "Zorachka\\EventDispatcher\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zorachka\\EventDispatcher\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "cs-lint": "php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes --dry-run --diff",
        "cs-fix": "php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes",
        "analyse": "phpstan analyse -c phpstan.neon",
        "test": "vendor/bin/phpunit --colors=always"
    }
}
